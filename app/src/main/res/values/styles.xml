<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionOverflowButtonStyle">@style/overflowButton</item>
    </style>

    <style name="font" parent="@style/TextAppearance.AppCompat.Medium"/>

    <style name="font.regular">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="font.medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="text" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:layout_marginLeft">@dimen/text_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/text_horizontal_margin</item>
    </style>

    <style name="text.title">
        <item name="android:fontFamily">@style/font.medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/jaguar</item>
        <item name="android:maxLines">@integer/news_text_max_line</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text.description">
        <item name="android:fontFamily">@style/font.regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/jaguar</item>
        <item name="android:maxLines">@integer/news_text_max_line</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text.date">
        <item name="android:fontFamily">@style/font.regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/midnightExpress</item>
    </style>

    <style name="overflowButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_horizontal_overflow</item>
    </style>

</resources>
